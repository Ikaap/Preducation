<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_credit_card_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/text_card_number"
            android:textColor="@color/app_color_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/app_color_on_secondary"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/app_color_on_secondary"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_card_number"
            tools:text="3550 0000 0000 000" />

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/text_card_holder_name"
            android:textColor="@color/app_color_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_card_number" />

        <EditText
            android:id="@+id/et_card_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/app_color_on_secondary"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/app_color_on_secondary"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_card_name"
            tools:text="Ika Purwanti" />

        <TextView
            android:id="@+id/tv_cvv"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/text_cvv"
            android:textColor="@color/app_color_secondary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_card_name" />

        <EditText
            android:id="@+id/et_cvv"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/app_color_on_secondary"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/app_color_on_secondary"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cvv"
            tools:text="***" />

        <TextView
            android:id="@+id/tv_expiry_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/text_expiry_date"
            android:textColor="@color/app_color_secondary"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_card_name" />

        <EditText
            android:id="@+id/et_expiry_date"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/app_color_on_secondary"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/app_color_on_secondary"
            android:textSize="14sp"
            android:imeOptions="actionDone"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cvv"
            tools:text="08/24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_cvv">

            <ImageView
                android:id="@+id/iv_mastercard_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/img_mastercard_logo" />

            <ImageView
                android:id="@+id/iv_visa_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginHorizontal="16dp"
                android:src="@drawable/img_visa_logo" />

            <ImageView
                android:id="@+id/iv_american_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/img_amex_logo" />

            <ImageView
                android:id="@+id/iv_paypal_logo"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/img_paypal_logo" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
