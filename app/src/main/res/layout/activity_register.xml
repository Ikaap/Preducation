<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F4F2"
    tools:context="com.kelompoksatuandsatu.preducation.presentation.feature.register.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/registerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">
            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="164dp"
                android:layout_height="164dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/img_logo" />

            <!-- Register Text -->
            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/text_getting_started"
                android:textSize="24sp" />

            <!-- Name Input -->
            <LinearLayout
                android:id="@+id/formNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/text_name"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/nameInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input_drawable"
                    android:hint="Full Name"
                    android:inputType="text"
                    android:paddingHorizontal="14dp" />
            </LinearLayout>

            <!-- Email Input -->
            <LinearLayout
                android:id="@+id/formEmailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/text_email"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input_drawable"
                    android:hint="nellearn@gmail.com"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="14dp" />
            </LinearLayout>

            <!-- Phone Number Input -->
            <LinearLayout
                android:id="@+id/formPhoneNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/text_phone_number"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/phoneNumberInput"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input_drawable"
                    android:hint="+62"
                    android:inputType="text"
                    android:paddingHorizontal="14dp" />
            </LinearLayout>

            <!-- Password Input -->
            <LinearLayout
                android:id="@+id/formPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="@string/text_create_a_password"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input_drawable"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/passwordInput"
                        android:layout_width="304dp"
                        android:layout_height="52dp"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:hint="Buat Password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="14dp" />

                    <Button
                        android:id="@+id/showHidePasswordButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/show_password" />
                </LinearLayout>
            </LinearLayout>

            <!-- Register Button -->
            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_button_primary"
                android:drawableRight="@drawable/eclipse_right_drawable"
                android:fontFamily="@font/poppins_bold"
                android:paddingLeft="76dp"
                android:text="@string/text_sign_up"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Login Text -->
            <LinearLayout
                android:id="@+id/loginTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/text_already_have_an_account"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/text_login_here"
                    android:textColor="@color/app_color_primary"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Error / Success Message Box -->
            <LinearLayout
                android:id="@+id/errorMessageBox"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_error_message"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/text_password_min_8_character"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>