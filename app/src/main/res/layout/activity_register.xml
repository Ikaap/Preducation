<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_on_primary"
    android:padding="16dp"
    tools:context="com.kelompoksatuandsatu.preducation.presentation.feature.register.RegisterActivity">

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/img_logo" />

        <!-- Register Text -->
        <TextView
            android:id="@+id/registerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/text_getting_started"
            android:textSize="24sp" />

        <!-- Name Input -->
        <LinearLayout
            android:id="@+id/formNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/text_name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_secondary_transparent"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingHorizontal="14dp" />
        </LinearLayout>

        <!-- Email Input -->
        <LinearLayout
            android:id="@+id/formEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/text_email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_secondary_transparent"
                android:hint="nellearn@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="14dp" />
        </LinearLayout>

        <!-- Phone Number Input -->
        <LinearLayout
            android:id="@+id/formPhoneNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phoneNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/text_phone_number"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_secondary_transparent"
                android:hint="+62"
                android:inputType="number"
                android:paddingHorizontal="14dp" />
        </LinearLayout>

        <!-- Password Input -->
        <LinearLayout
            android:id="@+id/formPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/text_create_a_password"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_secondary_transparent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="292dp"                    android:layout_height="52dp"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:hint="Buat Password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="14dp" />

                <Button
                    android:id="@+id/showHidePasswordButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/img_show_password" />

            </LinearLayout>

        </LinearLayout>

        <!-- Register Button -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_button_sign_up"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/bg_button_primary">

            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/text_sign_up"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_ellipse_white"
                android:contentDescription="@string/desc_arrow_right"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Login Text -->
        <LinearLayout
            android:id="@+id/loginTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/text_already_have_an_account"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/app_color_primary"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Error / Success Message Box -->
        <LinearLayout
            android:id="@+id/errorMessageBox"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_error_message"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/text_password_min_8_character"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>