<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.kelompoksatuandsatu.preducation.model.Login"/>
    </data>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_on_primary"
    android:padding="16dp"
    tools:context="com.kelompoksatuandsatu.preducation.presentation.feature.login.LoginActivity">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/img_logo" />

        <!-- Login Text -->
        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@{loginModel.loginTitle}"
            android:textSize="24sp" />

        <!-- Email Input -->
        <LinearLayout
            android:id="@+id/formEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@{loginModel.emailLabel}"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_secondary_transparent"
                android:hint="email@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="14dp" />

        </LinearLayout>

        <!-- Password Input -->
        <LinearLayout
            android:id="@+id/formPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins"
                    android:text="@{loginModel.passwordLabel}"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/forgotPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins"
                    android:text="@{loginModel.forgotLabel}"
                    android:textColor="@color/app_color_primary"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edit_text_secondary_transparent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="292dp"
                    android:layout_height="52dp"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:hint="*****"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp" />

                <Button
                    android:id="@+id/showHidePasswordButton"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/img_show_password" />

            </LinearLayout>

        </LinearLayout>

        <!-- Login Button -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signInButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/bg_button_primary">

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="@{loginModel.buttonLabel}"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_arrow_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_ellipse_white"
                android:contentDescription="@string/desc_arrow_right"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_right_orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Register Text -->
        <LinearLayout
            android:id="@+id/registerTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@{loginModel.registerTitle}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/registerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/app_color_primary"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Without Login Text -->
        <TextView
            android:id="@+id/tv_without_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@{loginModel.withoutText}"
            android:textSize="16sp" />

        <!-- Error Message Box -->
<!--        <LinearLayout-->
<!--            android:id="@+id/errorMessageBox"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="52dp"-->
<!--            android:layout_marginTop="24dp"-->
<!--            android:background="@drawable/bg_error_message"-->
<!--            android:gravity="center"-->
<!--            android:visibility="gone">-->

<!--            <TextView-->
<!--                android:id="@+id/errorMessage"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/poppins_medium"-->
<!--                android:text="@string/text_sorry_wrong_password"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="16sp" />-->

<!--        </LinearLayout>-->

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</layout>
